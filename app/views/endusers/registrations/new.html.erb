
<meta name="viewport" content="width=device-width,initial-scale=1.0">

<div class = "col-xs-12">
  <h2>新規会員登録</h2><hr>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

  <div class = "col-xs-12 padding_none">
    <div class = "col-xs-12 padding_none">
      <div class= "col-xs-4 padding_none">
        <%= f.label :"(姓) " %>
      </div>
      <div class="col-xs-8 field">
        <%= f.text_field :family_name, class: 'form-control' %>
      </div>
    </div>
    <div class = "col-xs-12 padding_none">
      <div class='col-xs-4 padding_none'>
        <%= f.label :"(名) " %>
      </div>
      <div class="col-xs-8 field">
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
    </div>
    <div class = "col-xs-12 padding_none">
      <div class='col-xs-4 padding_none'>
        <%= f.label :"(セイ)" %>
      </div>
      <div class="col-xs-8 field">
        <%= f.text_field :kana_family_name, class: 'form-control' %>
      </div>
    </div>
    <div class = "col-xs-12 padding_none">
      <div class='col-xs-4 padding_none'>
        <%= f.label :"(メイ)" %>
      </div>
      <div class="col-xs-8 field">
        <%= f.text_field :kana_first_name, class: 'form-control' %>
      </div>
    </div>
    <div class = "col-xs-12 padding_none">
      <div class="col-xs-4 padding_none">
        <%= f.label :"郵便番号(ハイフンなし)" %>
      </div>
      <div class="col-xs-8 field">
        <%= f.text_field :postal_code, class: 'form-control' %>
      </div>
    </div>
    <div class = "col-xs-12 padding_none">
      <div class="col-xs-4 padding_none">
        <%= f.label :"  ご住所情報（マンション名まで)" %>
      </div>
      <div class="col-xs-8 field">
        <%= f.text_field :address,class: 'form-control' %>
      </div>
    </div>
    <div class = "col-xs-12 padding_none">
      <div class="col-xs-4 padding_none">
        <%= f.label :"電話番号(ハイフンなし)" %>
      </div>
      <div class="col-xs-8 field">
        <%= f.text_field :tel,class: 'form-control' %>
      </div>
    </div>
    <div class = "col-xs-12 padding_none">
      <div class="col-xs-4 padding_none">
        <%= f.label :email %><br/>
      </div>
      <div class="col-xs-8 field">
        <%= f.email_field :email,class: 'form-control' %>
      </div>
    </div>
    <div class = "col-xs-12 padding_none">
      <div class="col-xs-4 padding_none">
        <%= f.label :password %><br>
      </div>
      <div class="col-xs-8 field">
        <%= f.password_field :password,class: 'form-control' %>
      </div>
    </div>
    <div class = "col-xs-12 padding_none">
      <div class="col-xs-4 padding_none">
        <%= f.label :password_confirmation %>
      </div>
      <div class="col-xs-8 field">
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </div>
    <div class = "col-xs-12 padding_none">
      <div class="col-xs-4 padding_none">
        <% if @minimum_password_length %>
          パスワードは<%= @minimum_password_length %> 文字以上<br><br>
        <% end %>
      </div>
      <div class="col-xs-8 field">
        <%= f.submit "新規登録",class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>

  <%= render "endusers/shared/links" %>
</div>
