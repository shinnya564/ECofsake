
<div class="col-xs-12">
	<div class="col-xs-12 padding_none">
		<h1 class="page-header">注文履歴一覧</h1>

		<div class="text-center">
			<table class="table">
					<thead>
						<tr>
							<th class="text-center">注文日<br>配送先</th>
							<th class="text-center">支払金額<br>注文商品<br>ステータス</th>
							<th class="text-center">注文<br>詳細</th>
						</tr>
					</thead>

				<% @orders.each do |order| %>
					<tbody class="order-index">
						<tr>
							<td>
								<%= order.created_at.strftime('%Y/%m/%d') %><br>
								<%= order.postal_code %><br>
								<%= order.shipping_address %><br>
								<%= order.shipping_name %><br>
							</td>
							<td>
								￥<%= order.billing_amount.to_s(:delimited) %><br>
								<% order.order_items.each do |order_item| %>
									<%= order_item.name %><br>
								<% end %>
								<%= order.status_flg %>
							</td>
							<td><%= link_to "表示", end_user_order_path(@end_user,order), class: "btn btn-primary" %></td>
						</tr>
					</tbody>
				<% end %>
			</table>
		</div>
	</div>
    <%= render 'end_users/side_menu' %>
</div>