
<script type="text/javascript" src="https://js.pay.jp/v1/"></script>

<div class='col-xs-12'>
	<h2 class="page-header">注文情報</h2>

	<%= form_for(@order, url: { controller: 'orders', action: 'order_check'}, html:{method:'get'}, id: 'card_form',  name: "inputForm" ) do |f| %>
		<div>
			<h3>支払い方法</h3>
			<%= f.radio_button :payment_flg, 1 %>代引支払<br>
			<%= f.radio_button :payment_flg, 0 %>クレジットカード<br>
			<div class='col-xs-12'>
				<%= radio_button_tag :card_selection, 0 %>登録済の中から選択<br>
				<%= collection_select(:card, :card_id, @cards, :id, :card_id, {:include_blank => true }, class: 'form-control field') %><br>
				<%= radio_button_tag :card_selection, 1 %>新規登録<br>
				<div class='col-xs-3'>
					カード番号
				</div>
				<div class=' col-xs-9 field'>
					<%= text_field_tag :card_number, "", class: "number form-control", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number" %>
				</div>
				<div class='col-xs-3'>
					<div class='col-xs-6'>
						有効期限
					</div>
					<div class='col-xs-6'>
						年/
					</div>
				</div>
				<div class=' col-xs-9 field'>
					<%= select_tag :card_exp_year, options_for_select([2020,2021,2022,2023,2024,2025,2026,2027,2028,2029,2030]), class: 'exp_year form-control' %>
				</div>
				<div class='col-xs-3'>
					<div class='col-xs-6'>
						有効期限
					</div>
					<div class='col-xs-6'>
						月/
					</div>
				</div>
				<div class=' col-xs-9 field'>
					<%= select_tag :card_exp_month, options_for_select(["01","02","03","04","05","06","07","08","09","10","11","12"]), class: 'exp_year form-control' %>
				</div>
				<div class='col-xs-3'>
					セキュリティコード
				</div>
				<div class=' col-xs-9 field'>
					<%= text_field_tag :"card_cvc", "", class:"cvc form-control", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "card_cvc" %>
				</div>
			</div>
		</div>

		<h3>お届け先</h3>
		<%= radio_button_tag :address_selection, 0 %>ご自身の住所<br>
		<div class='col-xs-12'>
			<%= @end_user.postal_code %>
			<%= @end_user.address %>
			<%= @end_user.family_name %>
			<%= @end_user.first_name %>
		</div><br>

		<br><%= radio_button_tag :address_selection, 1 %>登録済住所から選択<br>

		<div class='col-xs-12'>
			<%= collection_select(:address, :address_id, @addresses, :id, :full_address, {:include_blank => true }, class: 'form-control field') %><br>
		</div>
		<br><%= radio_button_tag :address_selection, 2 %>新しいお届け先<br>

		<div class='col-xs-3'>
			郵便番号(ハイフンなし)
		</div>
		<div class=' col-xs-9 field'>
			<%= f.text_field :postal_code, class: 'form-control' %>
		</div>
		<div class='col-xs-3'>
			住所
		</div>
		<div class=' col-xs-9 field'>
			<%= f.text_field :shipping_address, class: 'form-control' %>
		</div>
		<div class='col-xs-3'>
			宛名
		</div>
		<div class=' col-xs-9 field'>
			<%= f.text_field :shipping_name, class: 'form-control' %>
		</div>
		<%= f.submit "注文内容確認", id: "token_submit", class: "btn btn-primary btn-lg" %>
	<% end %>
</div>