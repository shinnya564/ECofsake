

<div class="col-xs-12">
  <h2 class="page-header">注文履歴詳細</h2>
    <div class="col-xs-6">
       <table class="table">
        <h3>注文情報</h3>
        <tr>
          <td>注文日</td>
          <td> <%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td> <%= @order.shipping_address %></td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td> <%= @order.payment_flg %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td> <%= @order.status_flg %></td>
        </tr>
      </table>
    </div>
    <div class="col-xs-6">
    <h3>請求情報</h3>
      <table class="table">
        <tr>
          <td>商品小計</td>
          <td><%= @total_price %></td>
        <tr>
        <tr>
          <td>送料</td>
          <td><%= @order.charriage %></td>
        </tr>
        <tr>
          <td>ご請求額</td>
          <td><%= @order.billing_amount%></td>
        </tr>

      </table>
    </div>
  </div>

  <div class= "order_items">
	<h3>注文内容</h3>
      <table class= "table">
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>請求情報</th>
          <th>注文内容</th>
        </tr>
        <% @order_items.each do |item| %>
          <tr>
            <td><%= item.name %> </td>
            <td><%= item.price %></td>
            <td><%= item.quantity %></td>
            <td><%= item.price * item.quantity  %></td>
          </tr>
        <% end %>
      </table>
  </div>

  <div>
    <br><br><%= link_to "戻る", :back, class: "btn btn-primary" %>
  </div>
</div>