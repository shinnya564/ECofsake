
	<div class="col-xs-12">
		<div class="col-xs-12 padding_none">
		    <% if @address.errors.any? %>
		    	<h2><%= pluralize(@address.errors.count, "error") %> prohibited this obj from being saved: </h2>
		    	<% @address.errors.full_messages.each do |message| %>
		        	<li><%= message %></li>
		    	<% end %>
		    <% end %>
		    <% @address.errors.full_messages.each do |message| %>
		      <%= message %>
		    <% end %>

			<h2>配送先登録/一覧</h2><hr>
		    <%= form_with model: [@end_user, @address] do |f| %>
			    <div class="col-xs-5 padding_none">
			    	<%= f.label :"郵便番号(番号のみ)" %>
			 	</div>
			    <div class="col-xs-7 field">
			    	<%= f.text_field :postal_code , class: 'form-control', placeholder: "例:1066223" %>
			    </div>
			    <div class="col-xs-5 padding_none">
			    	<%= f.label :"住所" %>
			    </div>
			    <div class="col-xs-7 field">
			    	<%= f.text_field :address, class: 'form-control', placeholder: "例:東京都港区六本木３丁目２−１ 住友不動産六本木グランドタワー 23F"%>
			    </div>
			    <div class="col-xs-5 padding_none">
			    	<%= f.label :"届け先名" %>
			    </div>
			    <div class="col-xs-7 field">
			    	<%= f.text_field :name, class: 'form-control', placeholder:"例:インフラトップ"%>
			    </div>
			    <div class="col-xs-5 padding_none">
			    </div>
			    <div class="col-xs-7 field">
			    	<%= f.submit :"新しい住所を登録する", class:"btn btn-primary" %><br><br><br>
			    </div>
		    <%end %>

			<div class="text-center padding_none">
			    <table class="table table-striped table-inverse">
			    	<thead>
				        <tr>
				          	<th class="text-center">住所</th>
				          	<th class="text-center">宛名</th>
				        </tr>
				      </thead>
				      <tbody>
				        <% @addresses.each do |address| %>
				          	<tr>
				            	<td>
				            		<%= address.postal_code %><br>
					            	<%= address.address %>
				            	</td>
				            	<td> <%= address.name %></td>
				            		<th>
				            			<%= link_to("編集",edit_end_user_address_path(current_end_user, address), class: "btn btn-success") %>
				            		</th>
				            		<th>
				            			<%= link_to("削除", end_user_address_path(current_end_user, address), method: :delete, class: "btn btn-danger pull-right") %>
				            		</th>

				          	</tr>
				        <% end %>
				      </tbody>
			    </table>
			</div>
		</div>
		<%= render 'end_users/side_menu' %>
	</div>
