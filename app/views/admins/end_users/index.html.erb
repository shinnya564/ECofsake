
<meta name="viewport" content="width=device-width,initial-scale=1.0">

<div class="col-xs-12">
	<h2 class="page-header">会員一覧画面</h2>
	<%= link_to "CSV出力", admins_end_users_path(format: :csv), class: "btn btn-primary" %>
	<%= paginate @end_users %>
		<table class="table text-center">
			<thead>
				<tr>
					<th class="text-center">会員ID</th>
					<th class="text-center">氏名</th>
					<th class="text-center">メールアドレス</th>
					<th class="text-center">ステータス</th>
				</tr>
			</thead>

			<% @end_users.each do |user| %>
				<tbody>
					<tr>
						<td><%= user.id %></td>
						<td><%= link_to user.family_name + user.first_name, admins_end_user_path(user.id), data: {"turbolinks" => false} %></td>
						<td><%= user.email %></td>
						<td><% if user.delete_status == true %>
									<%= "退会済み" %>
								<% else %>
									<%= "有効" %>
								<% end %>
						</td>
					</tr>
				</tbody>
			<% end %>
		</table>
	<%= paginate @end_users %>
</div>