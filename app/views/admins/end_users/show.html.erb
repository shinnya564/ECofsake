
<div class="col-xs-12">

	<div class="col-xs-3">
		<h2>サイドメニュー</h2><hr>
		<%= link_to "編集する", edit_admins_end_user_path(@end_user.id), class:"btn btn-success" %><br><br>

	    <%= link_to "注文履歴一覧", admins_end_user_orders_path(@end_user.id, order_sort: 0), class:"btn btn-primary" %>
	</div>

	<div class="col-xs-9">
		<h2><%= @end_user.family_name+@end_user.first_name%>さんの会員詳細</h2><hr>
		<div class="col-xs-4">
		    <h4>顧客ID</h4>
		</div>
		<div class="col-xs-8">
	    	<h4><%= @end_user.id %>
	        <% if @end_user.delete_status == false %>
	            【有効会員】</h4>
	        <% else %>
	            【退会済み】</h4>
	        <% end %>
		</div>
		<div class="col-xs-4">
	        <h4>氏名</h4>
	    </div>
		<div class="col-xs-8">
	        <h4><%= @end_user.family_name %>　<%= @end_user.first_name %></h4>
	    </div>
		<div class="col-xs-4">
	        <h4>フリガナ</h4>
	    </div>
		<div class="col-xs-8">
	        <h4><%= @end_user.kana_family_name %>　<%= @end_user.kana_first_name %></h4>
	    </div>
		<div class="col-xs-4">
	        <h4>郵便番号</h4>
	    </div>
		<div class="col-xs-8">
	        <h4><%= @end_user.postal_code %></h4>
	    </div>
		<div class="col-xs-4">
	        <h4>住所</h4>
	    </div>
		<div class="col-xs-8">
	        <h4><%= @end_user.address %></h4>
	    </div>
		<div class="col-xs-4">
			<h4>電話番号</h4>
		</div>
		<div class="col-xs-8">
	        <h4><%= @end_user.tel %></h4>
	    </div>
		<div class="col-xs-4">
	        <h4>メールアドレス</h4>
	    </div>
		<div class="col-xs-8">
	        <h4><%= @end_user.email %></h4>
	    </div>
	</div>
</div>