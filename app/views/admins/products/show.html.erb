<div class="col-xs-12">
	<h2 class="page-header">商品詳細</h2>
	<div class="col-xs-12">
		<h3>商品名:
		<%= @product.name %></h3>
	</div>

	<div class="col-xs-6">
		<%= attachment_image_tag @product, :image, size: "400x400", fallback: "no_image.jpg" %>
	</div>

	<div class="col-xs-6">
		<h3>商品説明</h3>
		<h3><%= @product.introduction %></h3>
	</div>

	<div class="col-xs-12">
		<div class="col-xs-4">
			<h3>ジャンル</h3>
		</div>
		<div class="col-xs-8">
			<h3><%= @type %></h3>
		</div>
		<div class="col-xs-4">
			<h3>
				&nbsp;税込価格<br>
				(税抜き価格)
			</h3>
		</div>
		<div class="col-xs-8">
			<h3>
				&nbsp;¥ <%= (@product.price_excluding * 1.08).ceil %><br>
				(¥ <%= @product.price_excluding %>)
			</h3>
		</div>
		<div class="col-xs-4">
			<h3>販売ステータス</h3>
		</div>
		<div class="col-xs-8">
			<% if @product.out_of_stock == false %>
				<h3><%= "販売中" %></h3>
			<% else %>
				<h3><%= "販売中止" %></h3>
			<% end %><br><br>
		</div>
    	<%= link_to "編集する", edit_admins_product_path, class: "btn btn-success" %><br><br>
    	<%= link_to "戻る",  admins_products_path, class: "btn btn-primary" %>
	</div>
</div>