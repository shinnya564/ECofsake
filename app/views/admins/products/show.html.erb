
<meta name="viewport" content="width=device-width,initial-scale=1.0">

<div class="col-xs-12">
	<h2 class="page-header">商品詳細</h2>
	<div class="col-xs-12">
		<h3><%= @product.name %></h3>
	</div>

	<%= attachment_image_tag @product, :image, size: "300x300", fallback: "no_image.jpg" %>
	<h3>商品説明</h3>
	<p><%= @product.introduction %></p>

	<div class="col-xs-12 padding_none">
		<div class="col-xs-5 padding_none">
			<h3>ジャンル</h3>
		</div>
		<div class="col-xs-7">
			<h3><%= @type %></h3>
		</div>
		<div class="col-xs-5 padding_none">
			<h3>
				&nbsp;税込価格<br>
				(税抜き価格)
			</h3>
		</div>
		<div class="col-xs-7">
			<h3>
				&nbsp;¥ <%= ((@product.price_excluding * 1.08).ceil).to_s(:delimited) %><br>
				(¥ <%= (@product.price_excluding).to_s(:delimited) %>)
			</h3>
		</div>
		<div class="col-xs-5 padding_none">
			<h3>販売ステータス</h3>
		</div>
		<div class="col-xs-7">
			<% if @product.out_of_stock == false %>
				<p><%= "販売中" %></p>
			<% else %>
				<h3><%= "販売中止" %></h3>
			<% end %><br><br>
		</div>
		<div class="col-xs-12 padding_none">
    		<%= link_to "編集する", edit_admins_product_path, class: "btn btn-success", data: {"turbolinks" => false} %><br><br>
    		<%= link_to "戻る",  admins_products_path, class: "btn btn-primary" %>
	    </div>
	</div>
</div>