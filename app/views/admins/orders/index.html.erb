<div class="col-xs-12">
	<h2 class="page-header">注文履歴一覧画面</h2>

	<table class="table table-striped table-inverse col text-center">
	    <thead>
	        <tr>
	            <th class="col-xs-2 col text-center">購入日時</th>
	            <th class="col-xs-3 col text-center">購入者</th>
	            <th class="col-xs-1 col text-center">注文個数</th>
	            <th class="col-xs-2 col text-center">注文ステータス</th>
	        </tr>
	    </thead>
	    <tbody>
	        <% @orders.each do |order| %>
	        <tr>
	            <td>
	            	<%= link_to order.created_at.strftime("%Y-%m-%d %H:%M"), admins_end_user_order_path(order.end_user_id ,order.id) %>
	            </td>
	            <td>
	            	<%= order.end_user.family_name %>
	            	<%= order.end_user.first_name %>
	            </td>
	            <td><%= order.total_quantity %></td>
	            <td><%= order.status_flg %></td>
	        </tr>
	        <% end %>
	    </tbody>
	</table>
</div>