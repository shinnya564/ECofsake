
<div class="col-xs-12">
	<h2 class="page-header">ジャンル編集画面</h2>
	<%= form_for @type, url: admins_type_path(@type.id) do |f| %>
  		<%= f.label :name, "ジャンル" %>
 		<%= f.text_field :name %>
  		<%= f.radio_button :invalid_status, true %>
 		<%= f.label :invalid_status, "有効", value: true %>
 		<%= f.radio_button :invalid_status, false %>
		<%= f.label :invalid_status, '無効', value: false %>
 		<%= f.submit "変更を保存する", class: "btn btn-primary" %>
 	<% end %>
</div>
