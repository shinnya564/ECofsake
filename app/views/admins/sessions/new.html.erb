
<div class="container padding_none">
  <div class="col-xs-12">
    <h2>管理者ログイン</h2><hr>
    <%= form_for(resource, as: resource_name, url: new_session_path(resource_name)) do |f| %>

      <div class="col-xs-3">
        <%= f.label :email %><br />
      </div>
      <div class="col-xs-9 field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="col-xs-3">
        <%= f.label :password %><br />
      </div>
      <div class="col-xs-9 field">
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div><br />

      <!-- link_to "=>パスワードを忘れた方はこちら"h6 -->
      <div class="col-xs-3">
      </div>
      <div class="col-xs-9 field">
        <%= f.submit "ログイン",class: "btn btn-primary"%><br><br><br>
        <%= link_to(" ゲストログイン", admins_guest_sign_in_path, method: :post, class: "btn btn-primary glyphicon glyphicon-log-in", data: {"turbolinks" => false}) %>
      </div>
    <% end %>
  </div>

    <div>
      <%= render "admins/shared/links" %>
    </div>
</div>

