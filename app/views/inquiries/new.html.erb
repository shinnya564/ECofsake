<div class="col-xs-12">
  <h1>お問い合わせ</h1>
  <% if @inquiry.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @inquiry.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for @inquiry, :url => inquiries_confirm_path do |f| %>
    <table class="table">
      <tr>
        <th>名前<span class="text-danger">（必須）</span></th>
        <% if end_user_signed_in? %>
            <td><%= f.text_field :name, value: @end_user.family_name + " " + @end_user.first_name %></td>
        <% else %>
            <td><%= f.text_field :name %></td>
        <% end %>
      </tr>
      <tr>
        <th>メールアドレス<span class="text-danger">（必須）</span></th>
        <% if end_user_signed_in? %>
          <td><%= f.text_field :email, value: @end_user.email %></td>
        <% else %>
            <td><%= f.text_field :email %></td>
        <% end %>
      </tr>
      <tr>
        <th>お問い合わせ内容</th>
        <td><%= f.text_area :message %></td>
      </tr>
    </table>
    <%= f.submit '確認', class: 'btn btn-primary' %>
  <% end %>
</div>