<div class="col-xs-12">
  <h1>お問い合わせ</h1>
  <% if @inquiry.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @inquiry.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for @inquiry, url: { controller: 'inquiries', action: 'confirm'}, html:{method:'get'} do |f| %>
    <div class="col-xs-2">
      名前<span class="text-danger">（必須）</span>
    </div>
    <div class="col-xs-10 field">
      <% if end_user_signed_in? %>
        <%= f.text_field :name, value: @end_user.family_name + " " + @end_user.first_name, class: "form-control" %>
      <% else %>
        <%= f.text_field :name, class: "form-control" %>
      <% end %>
    </div>
    <div class="col-xs-2">
        メールアドレス<span class="text-danger">（必須）</span>
    </div>
    <div class="col-xs-10 field">
      <% if end_user_signed_in? %>
        <%= f.text_field :email, value: @end_user.email, class: "form-control" %>
      <% else %>
          <%= f.text_field :email, class: "form-control" %>
      <% end %>
    </div>
    <div class="col-xs-2">
        お問い合わせ内容
    </div>
    <div class="col-xs-10 field">
      <%= f.text_area :message, class: "form-control" %>
    </div>

    <div class="col-xs-2">
    </div>
    <div class="col-xs-10 field">
      <%= f.submit '確認', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>